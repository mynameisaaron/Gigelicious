@model Gigelicious.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "GigUpdateForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GigUpdateForm</h2>




<h2>@Model.Heading</h2>
<p class="alert alert-info">All Fields <strong>Required</strong></p>
@using (Html.BeginForm("UpdateGig", "Gigs"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(g => g.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "eg. 1 Jan 2015" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "eg. 20:00" })
        @Html.ValidationMessageFor(m => m.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(@Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genre)
    </div>



    <button type="submit" class="btn btn-primary btn-lg">Submit</button>

}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}